import java.util.Scanner;

public class Square {
   
        private int[][] square;
        private int row;
        private int col;
        
        Scanner in = new Scanner(System.in);
      
        //--------------------------------------
        //create new square of given size
        //--------------------------------------

        /**
         *
         * @param size
         */
        public Square(int size) {
            System.out.println("Enter the amount or rows and columns in your magic square");
            size = in.nextInt();
            
            size = row;
            size = col;
            
            square = new int[row][col];
            
            for(int row = 0; row < square.length; row++) {
                for(int col = 0; col < square[row].length; col++) {
                    System.out.println("Enter the " + row + " row and " + col  
                            + " column element in your magic square. ");
                    square[row][col] = in.nextInt();
                }
                System.out.println();
            }
            
            System.out.println("Your array: "); 
            for(int row = 0; row < square.length; row++) {
                for(int col = 0; col < square[row].length; col++) {
                   
                    System.out.print(square[row][col] + "\t");
                }
                System.out.println();
            }
        }

